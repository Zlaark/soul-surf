<style>
  /* Policy page styling - matches theme */
  .policy-page {
    background-color: #FFF5E6;
    padding-top: 100px;
    padding-bottom: 60px;
    min-height: 100vh;
  }

  @media screen and (max-width: 749px) {
    .policy-page {
      padding-top: 80px;
      padding-bottom: 40px;
    }
  }

  .policy-page .page-width {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .policy-page__title {
    font-family: 'Playfair Display', serif;
    font-size: 42px;
    font-weight: 700;
    color: #1A1A1A;
    margin-bottom: 32px;
    text-align: left;
  }

  @media screen and (max-width: 749px) {
    .policy-page__title {
      font-size: 30px;
      margin-bottom: 24px;
    }
  }

  .policy-page__content {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 16px;
    line-height: 1.8;
    color: #333333;
  }

  .policy-page__content h2,
  .policy-page__content h3,
  .policy-page__content h4 {
    font-family: 'Playfair Display', serif;
    color: #1A1A1A;
    margin-top: 32px;
    margin-bottom: 12px;
    font-weight: 600;
  }

  .policy-page__content h2 { font-size: 28px; }
  .policy-page__content h3 { font-size: 22px; }

  .policy-page__content p { margin-bottom: 16px; }

  .policy-page__content ul,
  .policy-page__content ol {
    margin-bottom: 16px;
    padding-left: 24px;
  }

  .policy-page__content li { margin-bottom: 8px; }

  .policy-page__content a {
    color: #C57E00;
    text-decoration: underline;
    transition: color 0.2s ease;
  }

  .policy-page__content a:hover { color: #A86B00; }

  .policy-page__content strong,
  .policy-page__content b {
    font-weight: 700;
    color: #1A1A1A;
  }
</style>

<div class="policy-page">
  <div class="page-width">
    <h1 class="policy-page__title">{{ policy.title }}</h1>
    <div class="policy-page__content rte">
      {{ policy.body }}
    </div>
  </div>
</div>

