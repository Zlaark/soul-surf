<style>
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap');

  .custom-feature-grid {
    background-color: {{ section.settings.background_color }};
    padding: 60px 0 80px;
    width: 100%;
    overflow-x: hidden; /* Prevent horizontal scroll */
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .grid-container {
    max-width: 1450px;
    margin: 0 auto;
    padding: 0 20px;
    text-align: center;
  }

  .grid-heading {
    font-family: 'Playfair Display', serif;
    font-size: 63.9px;
    font-weight: 600;
    color: #000;
    margin-bottom: 100px;
    margin-top: 0;
    line-height: 1.2;
  }

  .features-wrapper {
    display: flex;
    justify-content: center;
    gap: 40px;
    margin-bottom: 50px;
    flex-wrap: wrap; 
  }

  .feature-card {
    position: relative;
    width: 280px;
    height: 350px;
    border-radius: 25px;
    overflow: hidden;
    flex-shrink: 0;
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    cursor: pointer;
  }

  .feature-card:nth-child(1) { transform: rotate(-3deg); }
  .feature-card:nth-child(2) { transform: rotate(2deg); }
  .feature-card:nth-child(3) { transform: rotate(-2deg); }
  .feature-card:nth-child(4) { transform: rotate(3deg); }

  .feature-card:hover {
    transform: rotate(0deg) scale(1.05);
    z-index: 10;
  }

  .feature-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.5s ease;
  }
  
  .feature-card:hover img {
    /* transform: scale(1.05); */ /* Removed here to put hover on card itself */
  }

  .feature-content {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 20px 24px 24px;
    text-align: left;
    background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0) 100%);
    box-sizing: border-box;
  }

  .feature-title {
    font-family: 'Playfair Display', serif;
    font-size: 26px;
    font-weight: 500;
    color: #fff;
    margin: 0 0 8px;
    letter-spacing: 0.5px;
  }

  .feature-subtitle {
     font-family: 'Plus Jakarta Sans', sans-serif !important;
     font-size: 14px;
     font-weight: 600 !important;
     color: #fff;
     text-transform: uppercase;
     letter-spacing: 2px;
     margin: 0;
     opacity: 0.9;
  }

  .gold-divider-line {
    width: 1.7px;
    height: 100px;
    background-color: #E2981A;
    margin: 0 auto 40px;
    display: block !important;
  }

  .bottom-text-section {
    text-align: center;
    max-width: 1100px;
    margin: 0 auto;
  }

  .bottom-heading {
    font-family: 'Playfair Display', serif;
    font-size: 64px;
    font-weight: 600;
    color: #000;
    margin: 0;
    line-height: 1.1;
  }

  .bottom-subheading {
    font-family: 'Playfair Display', serif;
    font-size: 64px;
    font-weight: 700;
    color: #E2981A; /* Updated goldish text */
    margin: 10px 0 50px;
    display: block;
  }

  .labels-container {
    display: flex;
    flex-direction: row; /* Single line on desktop */
    justify-content: center;
    gap: 60px; /* Keep consistent gap on desktop */
    margin-top: 20px;
  }
  
  .labels-row {
    display: flex;
    justify-content: center;
    gap: 60px;
  }
  
  .label-item {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #333;
  }

  @media screen and (max-width: 1024px) {
    .features-wrapper {
        gap: 15px;
    }
    .feature-card {
        width: 220px;
        height: 280px;
    }
  }

  @media screen and (max-width: 768px) {
    .grid-container {
        padding: 0 10px;
    }
    
    .grid-heading {
        font-size: 28px; /* Reduced from 36px */
        margin-bottom: 50px;
    }
    
    .features-wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr; /* 2 columns */
        gap: 20px 10px; /* row gap, column gap */
        justify-items: center;
    }
    
    .feature-card {
        width: 100%;
        max-width: 220px; /* Increased to allow wider cards */
        height: 280px; 
    }
    
    /* Keep rotation effects on mobile */
    .feature-card:nth-child(1) { transform: rotate(-3deg); }
    .feature-card:nth-child(2) { transform: rotate(2deg); }
    .feature-card:nth-child(3) { transform: rotate(-2deg); }
    .feature-card:nth-child(4) { transform: rotate(2deg); }
    
    /* Adjust text sizes for smaller cards */
    .feature-title {
        font-size: 18px;
    }
    
    .feature-subtitle {
        font-size: 10px;
        letter-spacing: 1px;
    }
    
    .feature-content {
        padding: 15px 12px 12px;
    }

    .bottom-heading, .bottom-subheading {
        font-size: 32px;
    }
    
    .labels-container {
        flex-direction: column; /* Two rows on mobile */
        gap: 15px;
    }
    
    .labels-row {
        gap: 40px;
        flex-wrap: wrap;
    }
    
    .label-item {
        font-size: 15px;
    }
  }

  /* Small mobile devices */
  @media screen and (max-width: 480px) {
    .custom-feature-grid {
        padding: 40px 0 60px;
    }

    .grid-heading {
        font-size: 36px; /* Reduced from 36px */
        margin-bottom: 35px;
    }

    .features-wrapper {
        gap: 15px 10px;
    }

    .feature-card {
        max-width: 200px; /* Increased from 165px */
        height: 230px;
        border-radius: 18px;
    }

    .feature-title {
        font-size: 16px;
    }

    .feature-subtitle {
        font-size: 9px;
        letter-spacing: 0.5px;
    }

    .feature-content {
        padding: 10px 8px 8px;
    }

    .gold-divider-line {
        height: 70px;
        margin-bottom: 25px;
    }

    .bottom-heading {
        font-size: 24px;
    }
     .bottom-subheading {
      font-size: 26px;
     }

    .bottom-subheading {
        font-size: 24px;
        margin: 5px 0 30px;
    }

    .labels-container {
        gap: 12px;
    }

    .labels-row {
        gap: 25px;
    }

    .label-item {
        font-size: 13px;
        letter-spacing: 1px;
    }
  }
</style>
<style>
  /* Animation Styles */
  .custom-feature-grid .feature-card {
    opacity: 0;
    transition: transform 1s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 1s ease-out;
    will-change: transform, opacity;
  }

  /* Before Animation (Not in view) */
  .custom-feature-grid:not(.in-view) .feature-card:nth-child(1),
  .custom-feature-grid:not(.in-view) .feature-card:nth-child(2) {
      transform: translateX(-150px) rotate(-10deg);
  }

  .custom-feature-grid:not(.in-view) .feature-card:nth-child(3),
  .custom-feature-grid:not(.in-view) .feature-card:nth-child(4) {
      transform: translateX(150px) rotate(10deg);
  }

  /* After Animation (In view) - Reset to original styles handled by nth-child rules, just ensure visibility */
  .custom-feature-grid.in-view .feature-card {
      opacity: 1;
      /* transforms revert to their specific nth-child rules defined above */
  }

  /* Ensure hover still works but maybe speed it up or keep separate */
  .custom-feature-grid.in-view .feature-card:hover {
      transition: transform 0.3s ease;
  }
</style>

<div class="custom-feature-grid">
  <div class="grid-container">
    <h2 class="grid-heading">{{ section.settings.heading }}</h2>
    
    <div class="features-wrapper">
      {%- for block in section.blocks -%}
        <div class="feature-card">
           {%- if block.settings.image != blank -%}
              {{ block.settings.image | image_url: width: 600 | image_tag: loading: 'lazy', alt: block.settings.title }}
           {%- else -%}
              {%- if forloop.index == 1 -%}
                 <img src="{{ 'grdcrd1.png' | asset_url }}" alt="{{ block.settings.title }}" loading="lazy" width="270" height="335" style="object-fit: cover;">
              {%- else -%}
                 {% capture current_asset %}grdcrd{{ forloop.index }}.png{% endcapture %}
                 <img src="{{ current_asset | asset_url }}" alt="{{ block.settings.title }}" loading="lazy" width="270" height="335" style="object-fit: cover;">
              {%- endif -%}
           {%- endif -%}
           <div class="feature-content">
             <h3 class="feature-title">{{ block.settings.title }}</h3>
             <p class="feature-subtitle">{{ block.settings.subtitle }}</p>
           </div>
        </div>
      {%- endfor -%}
    </div>

    <div class="gold-divider-line"></div>

    <div class="bottom-text-section">
        <h2 class="bottom-heading">{{ section.settings.bottom_heading }}</h2>
        <span class="bottom-subheading">{{ section.settings.bottom_subheading }}</span>
        
        <div class="labels-container">
            <div class="labels-row">
                {%- if section.settings.label_1 != blank -%}<span class="label-item">{{ section.settings.label_1 }}</span>{%- endif -%}
                {%- if section.settings.label_2 != blank -%}<span class="label-item">{{ section.settings.label_2 }}</span>{%- endif -%}
            </div>
            <div class="labels-row">
                {%- if section.settings.label_3 != blank -%}<span class="label-item">{{ section.settings.label_3 }}</span>{%- endif -%}
                {%- if section.settings.label_4 != blank -%}<span class="label-item">{{ section.settings.label_4 }}</span>{%- endif -%}
            </div>
        </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    const featureGrid = document.querySelector('.custom-feature-grid');
    
    if (featureGrid) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('in-view');
            observer.unobserve(entry.target);
          }
        });
      }, {
        threshold: 0.5
      });
      
      observer.observe(featureGrid);
    }
  });
</script>
