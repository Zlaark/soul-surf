{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Policy page style match */
  #shopify-section-{{ section.id }} {
    background-color: #FFF5E6 !important;
  }
  
  .main-blog.section-{{ section.id }}-padding {
    padding-top: 150px !important; /* Increased to fix header overlap and match policy feel */
    min-height: 100vh;
  }
  
  @media screen and (max-width: 749px) {
    .main-blog.section-{{ section.id }}-padding {
      padding-top: 120px;
    }
  }

  .blog-articles {
    display: grid !important; /* Force grid */
    grid-template-columns: 1fr;
    gap: 30px;
  }

  @media screen and (min-width: 750px) {
     .blog-articles {
        grid-template-columns: repeat(3, 1fr); /* Force 3 columns for better alignment */
     }
  }
{%- endstyle -%}

{%- paginate blog.articles by 6 -%}
  <div class="main-blog page-width section-{{ section.id }}-padding">
    <h1 class="title--primary{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}" style="text-align: center; margin-bottom: 50px; font-family: 'Playfair Display', serif;">
      {{ blog.title | escape }}
    </h1>

    <div class="blog-articles">
      {%- for article in blog.articles -%}
        <div
          class="blog-articles__article article{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: {{ forloop.index }};"
          {% endif %}
        >
          {%- render 'article-card',
            article: article,
            media_height: 'medium', 
            media_aspect_ratio: 1.66,
            show_image: true,
            show_date: true,
            show_author: false,
            show_excerpt: true
          -%}
        </div>
      {%- endfor -%}
    </div>

    {%- if paginate.pages > 1 -%}
      {%- render 'pagination', paginate: paginate -%}
    {%- endif -%}
  </div>
{%- endpaginate -%}

{% schema %}
{
  "name": "t:sections.main-blog.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
