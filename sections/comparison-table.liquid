{% schema %}
{
  "name": "Comparison Table",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How SoulSurf is Different"
    },
    {
      "type": "image_picker",
      "id": "soulsurf_image",
      "label": "SoulSurf Product Image"
    },
    {
      "type": "image_picker",
      "id": "generic_image",
      "label": "Generic Product Image"
    },
    {
      "type": "color",
      "id": "section_bg",
      "label": "Section Background",
      "default": "#E8F7EA"
    },
    {
      "type": "color",
      "id": "highlight_bg",
      "label": "Highlight Background",
      "default": "#137B56"
    },
    {
      "type": "header",
      "content": "Row 1"
    },
    {
      "type": "text",
      "id": "row1_label",
      "label": "Row 1 – Category Label",
      "default": "Sugar"
    },
    {
      "type": "text",
      "id": "row1_soul",
      "label": "Row 1 – SoulSurf Value",
      "default": "Zero Added Sugar"
    },
    {
      "type": "text",
      "id": "row1_generic",
      "label": "Row 1 – Generic Value",
      "default": "High"
    },
    {
      "type": "header",
      "content": "Row 2"
    },
    {
      "type": "text",
      "id": "row2_label",
      "label": "Row 2 – Category Label",
      "default": "Gut Health"
    },
    {
      "type": "text",
      "id": "row2_soul",
      "label": "Row 2 – SoulSurf Value",
      "default": "Supports Gut Health"
    },
    {
      "type": "text",
      "id": "row2_generic",
      "label": "Row 2 – Generic Value",
      "default": "Harms microbiome"
    },
    {
      "type": "checkbox",
      "id": "row2_cross",
      "label": "Show ✕ icon before generic value",
      "default": true
    },
    {
      "type": "header",
      "content": "Row 3"
    },
    {
      "type": "text",
      "id": "row3_label",
      "label": "Row 3 – Category Label",
      "default": "Additives"
    },
    {
      "type": "text",
      "id": "row3_soul",
      "label": "Row 3 – SoulSurf Value",
      "default": "No Chemicals"
    },
    {
      "type": "text",
      "id": "row3_generic",
      "label": "Row 3 – Generic Value",
      "default": "Artificial"
    },
    {
      "type": "header",
      "content": "Row 4"
    },
    {
      "type": "text",
      "id": "row4_label",
      "label": "Row 4 – Category Label",
      "default": "Energy After Drink"
    },
    {
      "type": "text",
      "id": "row4_soul",
      "label": "Row 4 – SoulSurf Value",
      "default": "Light & Energizing"
    },
    {
      "type": "text",
      "id": "row4_generic",
      "label": "Row 4 – Generic Value",
      "default": "Sluggish"
    },
    {
      "type": "header",
      "content": "Row 5"
    },
    {
      "type": "text",
      "id": "row5_label",
      "label": "Row 5 – Category Label",
      "default": "Flavour"
    },
    {
      "type": "text",
      "id": "row5_soul",
      "label": "Row 5 – SoulSurf Value",
      "default": "Natural Citrus Zing"
    },
    {
      "type": "text",
      "id": "row5_generic",
      "label": "Row 5 – Generic Value",
      "default": "Fake & Syrupy"
    },
    {
      "type": "header",
      "content": "Row 6"
    },
    {
      "type": "text",
      "id": "row6_label",
      "label": "Row 6 – Category Label",
      "default": "Calorie Count"
    },
    {
      "type": "text",
      "id": "row6_soul",
      "label": "Row 6 – SoulSurf Value",
      "default": "35 kcal"
    },
    {
      "type": "text",
      "id": "row6_generic",
      "label": "Row 6 – Generic Value",
      "default": "High"
    }
  ],
  "presets": [
    {
      "name": "Comparison Table"
    }
  ]
}
{% endschema %}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap');

  {% assign selected_variant = product.selected_or_first_available_variant %}
  {% assign current_bg = selected_variant.metafields.custom.background_color.value | default: section.settings.section_bg %}
  {% assign current_highlight = selected_variant.metafields.custom.nutrition_color.value | default: section.settings.highlight_bg %}
  {% assign current_generic_bg = selected_variant.metafields.custom.feature_background_color.value | default: 'rgba(19, 120, 90, 0.09)' %}
  
  .comparison-section {
    background-color: var(--section-bg, {{ current_bg }});
    padding: 60px 0 80px;
    font-family: 'Plus Jakarta Sans', sans-serif;
    transition: background-color 0.3s ease;
  }

  .cmp-container {
    max-width: 950px; /* Increased back slightly to accommodate gaps without shrinking cards */
    margin: 0 auto;
    padding: 0 20px;
  }

  .cmp-heading {
    font-family: 'Playfair Display', serif;
    font-size: 56px;
    font-weight: 500;
    color: #000;
    margin-bottom: 190px; /* Increased to allow space for pop-out images */
    text-align: center;
    letter-spacing: -0.5px;
  }

  /* Main Grid - 3 columns */
  .cmp-grid {
    position: relative;
    display: grid;
    grid-template-columns: 0.8fr 1fr 1fr; /* Reduced left column width */
    column-gap: 60px; /* Increased gap to 40px */
    align-items: start;
    z-index: 1;
  }



  /* Labels Column */
  .cmp-labels {
    display: flex;
    flex-direction: column;
    padding-top: 20px; /* Minimized to match 20px header */
  }

  .cmp-row-label {
    height: 70px;
    display: flex;
    align-items: center;
    font-weight: 600;
    font-size: 20px; 
    color: #1A1A1A;
    padding-left: 10px;
    /* border-bottom removed - handled by cmp-grid::after */
  }
  
  .cmp-row-label:last-child {
      border-bottom: none;
  }

  /* SoulSurf Column (Dark Green) */
  .cmp-soul-col {
    background-color: var(--highlight-bg, {{ current_highlight }});
    color: #fff;
    border-radius: 16px; /* Keeping rounded */
    overflow: visible;
    position: relative;
    box-shadow: 0 10px 40px rgba(19, 123, 86, 0.2);
    z-index: 2;
    padding-bottom: 10px;
    transition: background-color 0.3s ease;
  }

  .cmp-soul-header {
    height: 20px; /* Minimal header height */
    display: flex;
    justify-content: center;
    align-items: flex-end;
    padding-bottom: 2px;
    position: relative;
  }

  .cmp-soul-header img {
    position: absolute;
    bottom: 5px; /* Anchored near the row start */
    width: 80px; /* Increased size */
    height: auto;
    filter: drop-shadow(0 8px 12px rgba(0,0,0,0.2));
    z-index: 10;
    transition: opacity 0.3s ease;
  }

  .cmp-soul-row {
    height: 70px; 
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px; 
    font-weight: 500;
    /* border-bottom removed - handled by cmp-grid::after */
  }

  .cmp-soul-row:last-child {
    border-bottom: none;
  }

  /* Generic Column (Light) */
  .cmp-generic-col {
    background-color: var(--generic-bg, {{ current_generic_bg }});
    border-radius: 16px; /* Fully rounded */
    overflow: visible;
    position: relative;
    z-index: 1;
    padding-bottom: 10px;
    transition: background-color 0.3s ease;
  }

  .cmp-generic-header {
    height: 20px; /* Match minimal header height */
    display: flex;
    justify-content: center;
    align-items: flex-end;
    padding-bottom: 2px;
    position: relative;
  }

  .cmp-generic-header img {
    position: absolute;
    bottom: 5px;
    width: 55px; /* Increased size */
    height: auto;
    opacity: 0.6;
    filter: drop-shadow(0 4px 6px rgba(0,0,0,0.1));
  }

  .cmp-generic-row {
    height: 70px; /* Reduced height */
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px; /* Reduced font size */
    font-weight: 500;
    color: #333;
    /* border-bottom removed - handled by cmp-grid::after */
  }

  .cmp-generic-row:last-child {
    border-bottom: none;
  }
  
  .cmp-icon-cross {
    font-size: 24px; /* Strictly matching text size */
    margin-right: 8px;
  }

  .cmp-icon-cross {
    color: #E53935;
    margin-right: 6px;
    font-weight: bold;
    font-size: 14px;
  }

  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    .comparison-section {
      padding: 40px 0 60px;
    }

    .cmp-container {
      padding: 0 15px;
    }

    .cmp-heading {
      font-size: 32px;
      margin-bottom: 120px;
    }

    .cmp-grid {
      grid-template-columns: 1fr 1fr 1fr; /* Equal width columns */
      column-gap: 8px;
      min-width: unset;
    }



    .cmp-row-label {
      font-size: 13px;
      height: 60px;
      padding-left: 5px;

    }

    .cmp-soul-col {
      border-radius: 12px;
    }

    .cmp-soul-header {
      height: 15px;
    }

    .cmp-soul-header img {
      width: 50px;
      bottom: 3px;
    }

    .cmp-soul-row {
      font-size: 12px;
      height: 60px;
      padding: 0 8px;
      text-align: center;

    }

    .cmp-soul-row:last-child {
      border-bottom: none;
    }

    .cmp-generic-col {
      border-radius: 12px;
    }

    .cmp-generic-header {
      height: 15px;
    }

    .cmp-generic-header img {
      width: 40px;
      bottom: 3px;
    }

    .cmp-generic-row {
      font-size: 12px;
      height: 60px;
      padding: 0 8px;
      text-align: center;

    }

    .cmp-generic-row:last-child {
      border-bottom: none;
    }

    .cmp-icon-cross {
      font-size: 12px;
      margin-right: 4px;
    }
  }
</style>

<div class="comparison-section">
  <div class="cmp-container">
    <h2 class="cmp-heading">{{ section.settings.heading }}</h2>

    <div class="cmp-grid">
      
      <!-- Labels Column -->
      <div class="cmp-labels">
        <div class="cmp-row-label">{{ section.settings.row1_label | default: 'Sugar' }}</div>
        <div class="cmp-row-label">{{ section.settings.row2_label | default: 'Gut Health' }}</div>
        <div class="cmp-row-label">{{ section.settings.row3_label | default: 'Additives' }}</div>
        <div class="cmp-row-label">{{ section.settings.row4_label | default: 'Energy After Drink' }}</div>
        <div class="cmp-row-label">{{ section.settings.row5_label | default: 'Flavour' }}</div>
        <div class="cmp-row-label">{{ section.settings.row6_label | default: 'Calorie Count' }}</div>
      </div>

      <!-- SoulSurf Column -->
      <div class="cmp-soul-col">
        <div class="cmp-soul-header">
          {% assign comparison_img = selected_variant.metafields.custom.comparison_image.value %}
          {% if comparison_img %}
             {{ comparison_img | image_url: width: 200 | image_tag: class: 'cmp-soul-img', alt: 'SoulSurf' }}
          {% else %}
             <img src="{{ 'bk2.png' | asset_url }}" alt="SoulSurf" class="cmp-soul-img">
          {% endif %}
        </div>
        <div class="cmp-soul-row">{{ section.settings.row1_soul | default: 'Zero Added Sugar' }}</div>
        <div class="cmp-soul-row">{{ section.settings.row2_soul | default: 'Supports Gut Health' }}</div>
        <div class="cmp-soul-row">{{ section.settings.row3_soul | default: 'No Chemicals' }}</div>
        <div class="cmp-soul-row">{{ section.settings.row4_soul | default: 'Light & Energizing' }}</div>
        <div class="cmp-soul-row">{{ section.settings.row5_soul | default: 'Natural Citrus Zing' }}</div>
        <div class="cmp-soul-row">{{ section.settings.row6_soul | default: '35 kcal' }}</div>
      </div>

      <!-- Generic Column -->
      <div class="cmp-generic-col">
        <div class="cmp-generic-header">
          {% if section.settings.generic_image %}
            {{ section.settings.generic_image | image_url: width: 200 | image_tag }}
          {% else %}
            <img src="{{ 'bk1.png' | asset_url }}" alt="Generic Can">
          {% endif %}
        </div>
        <div class="cmp-generic-row">{{ section.settings.row1_generic | default: 'High' }}</div>
        <div class="cmp-generic-row">{% if section.settings.row2_cross %}<span class="cmp-icon-cross">✕</span> {% endif %}{{ section.settings.row2_generic | default: 'Harms microbiome' }}</div>
        <div class="cmp-generic-row">{{ section.settings.row3_generic | default: 'Artificial' }}</div>
        <div class="cmp-generic-row">{{ section.settings.row4_generic | default: 'Sluggish' }}</div>
        <div class="cmp-generic-row">{{ section.settings.row5_generic | default: 'Fake & Syrupy' }}</div>
        <div class="cmp-generic-row">{{ section.settings.row6_generic | default: 'High' }}</div>
      </div>

    </div>
  </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function() {
    
    // Variant Data Map for Comparison Table
    const variantComparisonData = {
        {% for variant in product.variants %}
        "{{ variant.id }}": {
            "bg": "{{ variant.metafields.custom.background_color.value | default: section.settings.section_bg }}",
            "highlight": "{{ variant.metafields.custom.nutrition_color.value | default: section.settings.highlight_bg }}",
            "generic_bg": "{{ variant.metafields.custom.feature_background_color.value | default: 'rgba(19, 120, 90, 0.09)' }}",
            "img": {% if variant.metafields.custom.comparison_image.value %}"{{ variant.metafields.custom.comparison_image.value | image_url: width: 200 }}"{% else %}null{% endif %}
        }{% unless forloop.last %},{% endunless %}
        {% endfor %}
    };

    const section = document.querySelector('.comparison-section');
    const soulCol = document.querySelector('.cmp-soul-col');
    const genericCol = document.querySelector('.cmp-generic-col');
    const soulImg = document.querySelector('.cmp-soul-img');

    // Listen for variant change
    document.addEventListener('pp:variant:change', function(e) {
        if (!e.detail || !e.detail.variantId) return;
        
        const variantId = String(e.detail.variantId);
        const data = variantComparisonData[variantId];
        
        if (data && section) {
            // Update Background Color
            section.style.setProperty('--section-bg', data.bg);
            section.style.backgroundColor = data.bg; // Fallback
            
            // Update Highlight Color
            if (soulCol) {
                soulCol.style.setProperty('--highlight-bg', data.highlight);
                soulCol.style.backgroundColor = data.highlight; // Fallback
            }
            
            // Update Generic Column Color
            if (genericCol) {
                genericCol.style.setProperty('--generic-bg', data.generic_bg);
                genericCol.style.backgroundColor = data.generic_bg; // Fallback
            }
            
            // Update Comparison Image
            if (soulImg && data.img) {
                soulImg.removeAttribute('srcset'); // Remove srcset to ensure src update works
                soulImg.src = data.img;
            }
        }
    });
});
</script>
