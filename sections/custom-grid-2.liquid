{% schema %}
{
  "name": "Grid 2 (Crowd Favourite)",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFD65B"
    },
    {
        "type": "header",
        "content": "Left Content"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "The Crowd\nFavourite"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Quirky Lemon Lime"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "A sharp, zesty citrus punch balanced with a clean mineral finish."
    },
    {
      "type": "text",
      "id": "feature_text",
      "label": "Feature Text",
      "default": "Perfectly Carbonated."
    },
    {
        "type": "header",
        "content": "Details"
    },
    {
      "type": "text",
      "id": "tasting_notes_label",
      "label": "Tasting Notes Label",
      "default": "TASTING NOTES"
    },
    {
      "type": "text",
      "id": "tasting_notes_value",
      "label": "Tasting Notes Value",
      "default": "Zesty, Sharp, Crisp"
    },
    {
      "type": "text",
      "id": "mood_label",
      "label": "Mood Label",
      "default": "MOOD"
    },
    {
      "type": "text",
      "id": "mood_value",
      "label": "Mood Value",
      "default": "Morning Jolt"
    },
    {
        "type": "header",
        "content": "Button & Pack Info"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "pack_text",
      "label": "Pack Text",
      "default": "PACK OF 12 CANS"
    },
    {
        "type": "header",
        "content": "Right Grid Images"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1 (Top Left)"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2 (Top Right)"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3 (Bottom Left)"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image 4 (Bottom Right)"
    },
    {
        "type": "header",
        "content": "Badge"
    },
    {
        "type": "image_picker",
        "id": "badge_image",
        "label": "Badge Image"
    },
    {
        "type": "range",
        "id": "badge_width",
        "min": 50,
        "max": 300,
        "step": 5,
        "unit": "px",
        "label": "Badge Width",
        "default": 140
    },

  ],
  "presets": [
    {
      "name": "Grid 2 (Crowd Favourite)"
    }
  ]
}
{% endschema %}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap');

  .custom-grid-2-section {
    background-color: {{ section.settings.background_color }};
    padding: 100px 0;
    width: 100%;
    overflow-x: hidden; /* Prevent horizontal scroll */
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    color: #1A1A1A;
  }
  
  .custom-grid-2-section * {
    box-sizing: border-box; /* Ensure padding is included in width */
  }

  .grid-2-container {
    max-width: 1300px;
    margin: 0 auto;
    padding: 0 40px;
    width: 100%; /* Ensure it respects the parent width */
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 80px;
  }

  /* Left Content Styles */
  .left-content {
    flex: 1;
    max-width: 600px;
  }

  .main-heading {
    font-family: 'Playfair Display', serif;
    font-size: 60px;
    font-weight: 600;
    line-height: 1.1;
    margin: 0 0 15px;
    color: #000;
  }
  
  .custom-heading-divider {
      display: block;
      width: 500px;
      max-width: 100%;
      height: 5px;
      min-height: 5px;
      background-color: #C39900 !important;
      margin-bottom: 40px;
      border: none;
      opacity: 1;
      position: relative;
      z-index: 2;
  }

  .subheading {
    font-family: 'Playfair Display', serif;
    font-size: 40px;
    font-weight: 500;
    margin: 0 0 20px;
    color: #000;
  }

  .description {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 19px;
    line-height: 1.6;
    margin: 0 0 40px;
    color: #333;
  }

  h4.feature-text {
    font-family: 'Playfair Display', serif !important;
    font-size: 32px !important;
    font-weight: 600 !important;
    margin: 0 0 20px;
    color: #000;
  }

  .custom-divider-black {
      height: 2px;
      background-color: #000000;
      width: 700px;
      max-width: 100%;
      margin: 20px 0;
      display: block;
      border: none;
      opacity: 1;
  }

  .details-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
      margin-bottom: 4px;
  }

  .detail-group {
      display: flex;
      flex-direction: column;
  }

  .detail-label {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 13px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: rgba(0, 0, 0, 0.45);
    margin-bottom: 4px;
  }

  .detail-value {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 15px;
    font-weight: 700;
    color: #000;
  }

  .action-area {
      display: flex;
      align-items: center;
      gap: 30px;
  }

  .shop-button {
    background-color: #000;
    color: #fff;
    padding: 17px 55px;
    border-radius: 50px;
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 17px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-decoration: none;
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.3s ease;
    
    /* Animation Properties */
    position: relative;
    overflow: hidden;
    z-index: 10;
    border: 1px solid rgba(208, 151, 0, 0); /* Transparent border of target color */
    outline: none;
  }
  
  .shop-button span {
    position: relative;
    z-index: 2;
  }

  .shop-button::after {
    content: '';
    position: absolute;
    bottom: -50%;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #D09700; 
    transform-origin: bottom center;
    transition: transform 1000ms cubic-bezier(0.48, 0, 0.12, 1);
    transform: skewY(9.3deg) scaleY(0);
    z-index: 1;
  }

  .shop-button:hover {
      transform: translateY(-2px); /* Replaced scale with lift to match other buttons */
      border-color: #D09700;
  }

  .shop-button:hover::after {
      transform-origin: bottom center;
      transform: skewY(9.3deg) scaleY(2);
  }

  .pack-text {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1.5px;
    color: #000;
  }

  /* Right Grid Styles */
  .right-grid-wrapper {
      flex: 0 0 540px; /* Fixed basis to reduce the size */
      max-width: 100%;
      position: relative;
  }
  
  .image-grid {
      display: flex;
      gap: 15px;
  }

  .grid-col {
      display: flex;
      flex-direction: column;
      gap: 15px;
      flex: 1;
  }

  .staggered-col {
      margin-top: 40px; /* Reduced shift */
  }

  .grid-image-item {
      width: calc(100% - 2px);
      margin: 0 auto;
      position: relative;
      aspect-ratio: 3 / 4; /* Enforce vertical frame */
      border-radius: 20px;
      overflow: hidden;
      background-color: #E0E0E0; /* Visible grey for empty state */
  }

  .grid-image-item img {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      transition: transform 0.5s ease;
  }
  
  .grid-image-item:hover img {
      transform: scale(1.05);
  }

  .badge-image-wrapper {
      position: absolute;
      top: 20px;
      left: -60px;
      z-index: 10;
  }

  .custom-badge-img {
      width: {{ section.settings.badge_width }}px;
      height: auto;
      display: block;
      transition: transform 0.3s ease;
  }

  .badge-image-wrapper:hover .custom-badge-img {
      transform: scale(1.05) rotate(10deg);
  }


  @media screen and (max-width: 1024px) {
    .grid-2-container {
        flex-direction: column-reverse;
        gap: 60px;
        padding: 0 20px; /* Reduce padding on mobile */
    }
    
    .left-content {
        max-width: 100%;
        text-align: left;
    }
    
    .main-heading {
        font-size: 42px;
    }
    
    .left-content > div[style*="background-color"] {
        margin-left: 0 !important;
        margin-right: auto !important;
    }

    .custom-heading-divider {
        margin: 0 0 40px;
    }
    
    .details-grid {
        text-align: left;
        max-width: 100%;
        margin: 0 0 40px;
    }

    .action-area {
        justify-content: flex-start;
        gap: 20px;
    }

    .shop-button {
        font-size: 16px;
        padding: 12px 35px;
    }

    .pack-text {
        font-size: 14px;
    }
    
    .right-grid-wrapper {
        width: 100%;
        max-width: 600px;
    }
    
    .badge-image-wrapper {
        left: -20px;
        top: -30px;
    }
  }

  /* Small mobile devices */
  @media screen and (max-width: 480px) {
    .grid-2-container {
        gap: 40px;
        padding: 0 15px;
    }
    
    .main-heading {
        font-size: 36px;
    }
    
    .subheading {
        font-size: 14px;
    }
    
    .description {
        font-size: 14px;
    }

    .feature-text {
        font-size: 14px;
    }
    
    .shop-button {
        font-size: 14px;
        padding: 10px 28px;
    }

    .pack-text {
        font-size: 12px;
    }

    .action-area {
        gap: 15px;
    }
    
    .custom-badge-img {
        width: 80px;
    }
  }
  
  /* Placeholder SVG Styles */
  .placeholder-svg {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      fill: #a0a0a0;
      background-color: #f0f0f0;
  }

  /* Defined Animations */
  @keyframes slideInDown {
    from { opacity: 0; transform: translateY(-100px); }
    to { opacity: 1; transform: translateY(0); }
  }
  @keyframes slideInUp {
    from { opacity: 0; transform: translateY(100px); }
    to { opacity: 1; transform: translateY(0); }
  }
  @keyframes slideInFromRight { /* Enter from Right */
    from { opacity: 0; transform: translateX(100px); }
    to { opacity: 1; transform: translateX(0); }
  }
  @keyframes slideInFromLeft { /* Enter from Left */
    from { opacity: 0; transform: translateX(-100px); }
    to { opacity: 1; transform: translateX(0); }
  }

  /* Initial State */
  .grid-image-item {
      opacity: 0;
  }

  /* Active Animations Triggered by .in-view */
  
  /* Top Left: Enter from Top */
  .custom-grid-2-section.in-view .image-grid .grid-col:nth-child(1) .grid-image-item:nth-child(1) {
      animation: slideInDown 1.0s cubic-bezier(0.22, 1, 0.36, 1) forwards;
      animation-delay: 0.1s;
  }

  /* Top Right: Enter from Right */
  .custom-grid-2-section.in-view .image-grid .grid-col:nth-child(2) .grid-image-item:nth-child(1) {
      animation: slideInFromRight 1.0s cubic-bezier(0.22, 1, 0.36, 1) forwards;
      animation-delay: 0.3s;
  }

  /* Bottom Left: Enter from Left */
  .custom-grid-2-section.in-view .image-grid .grid-col:nth-child(1) .grid-image-item:nth-child(2) {
      animation: slideInFromLeft 1.0s cubic-bezier(0.22, 1, 0.36, 1) forwards;
      animation-delay: 0.5s;
  }

  /* Bottom Right: Enter from Bottom */
  .custom-grid-2-section.in-view .image-grid .grid-col:nth-child(2) .grid-image-item:nth-child(2) {
      animation: slideInUp 1.0s cubic-bezier(0.22, 1, 0.36, 1) forwards;
      animation-delay: 0.7s;
  }

  /* Badge Animation: From Left */
  .badge-image-wrapper {
      opacity: 1; /* Force visible */
      transition: transform 1.2s cubic-bezier(0.22, 1, 0.36, 1), opacity 1.2s ease-out;
      will-change: transform, opacity;
      transition-delay: 0.2s; 
  }

  .custom-grid-2-section:not(.in-view) .badge-image-wrapper {
     /* Disable initial hide */
  }

  .custom-grid-2-section.in-view .badge-image-wrapper {
      opacity: 1;
      transform: translateX(0);
  }


</style>

<div class="custom-grid-2-section">
  <div class="grid-2-container">
    
    <div class="left-content">
        <h2 class="main-heading">{{ section.settings.heading | newline_to_br }}</h2>
        <div style="width: 100%; max-width: 500px; height: 5px; background-color: #C39900; margin-bottom: 40px; display: block; opacity: 1;"></div>

        <h3 class="subheading">{{ section.settings.subheading }}</h3>
        <p class="description">{{ section.settings.description }}</p>
        
        <h4 class="feature-text">{{ section.settings.feature_text }}</h4>
        
        <div style="height: 1.5px; width: 100%; max-width: 700px; background-color: rgba(0, 0, 0, 0.45); margin: 20px 0; display: block;"></div>
        
        <div class="details-grid">
            <div class="detail-group">
                <span class="detail-label">{{ section.settings.tasting_notes_label }}</span>
                <span class="detail-value">{{ section.settings.tasting_notes_value }}</span>
            </div>
            <div class="detail-group">
                <span class="detail-label">{{ section.settings.mood_label }}</span>
                <span class="detail-value">{{ section.settings.mood_value }}</span>
            </div>
        </div>
        
        <div style="height: 1.5px; width: 100%; max-width: 700px; background-color: rgba(0, 0, 0, 0.45); margin: 20px 0 45px 0; display: block;"></div>

        <div class="action-area">
            <a href="{{ section.settings.button_link | default: '#' }}" class="shop-button">
                <span>{{ section.settings.button_label }}</span>
            </a>
            <span class="pack-text">{{ section.settings.pack_text }}</span>
        </div>
    </div>

    <div class="right-grid-wrapper">
        <div class="badge-image-wrapper">
            {%- if section.settings.badge_image != blank -%}
                {{ section.settings.badge_image | image_url: width: 600 | image_tag: loading: 'lazy', class: 'custom-badge-img' }}
            {%- else -%}
                <img src="{{ 'Group 280.png' | asset_url }}" alt="Badge" class="custom-badge-img" loading="lazy">
            {%- endif -%}
        </div>

        <div class="image-grid">
            <div class="grid-col staggered-col">
                <div class="grid-image-item">
                    {%- if section.settings.image_1 != blank -%}
                        {{ section.settings.image_1 | image_url: width: 400 | image_tag: loading: 'lazy' }}
                    {%- else -%}
                        <img src="{{ 'grd21.png' | asset_url }}" alt="Grid Card 1" loading="lazy">
                    {%- endif -%}
                </div>
                <div class="grid-image-item">
                    {%- if section.settings.image_3 != blank -%}
                        {{ section.settings.image_3 | image_url: width: 400 | image_tag: loading: 'lazy' }}
                    {%- else -%}
                        <img src="{{ 'grd23.png' | asset_url }}" alt="Grid Card 3" loading="lazy">
                    {%- endif -%}
                </div>
            </div>
            <div class="grid-col">
                <div class="grid-image-item">
                    {%- if section.settings.image_2 != blank -%}
                        {{ section.settings.image_2 | image_url: width: 400 | image_tag: loading: 'lazy' }}
                    {%- else -%}
                        <img src="{{ 'grd22.png' | asset_url }}" alt="Grid Card 2" loading="lazy">
                    {%- endif -%}
                </div>
                <div class="grid-image-item">
                    {%- if section.settings.image_4 != blank -%}
                        {{ section.settings.image_4 | image_url: width: 400 | image_tag: loading: 'lazy' }}
                    {%- else -%}
                        <img src="{{ 'grd24.png' | asset_url }}" alt="Grid Card 4" loading="lazy">
                    {%- endif -%}
                </div>
            </div>
        </div>
    </div>

  </div>
</div>



<script>
  document.addEventListener("DOMContentLoaded", function() {
    const sections = document.querySelectorAll('.custom-grid-2-section');
    
    if (sections.length > 0) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('in-view');
            observer.unobserve(entry.target);
          }
        });
      }, {
        threshold: 0.2
      });
      
      sections.forEach(section => {
        observer.observe(section);
      });
    }
  });
</script>
