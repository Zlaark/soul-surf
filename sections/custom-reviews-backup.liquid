<script>
(function() {
  /* ===== Configuration from Liquid ===== */
  var CONFIG = {
    sectionId:    {{ section.id | json }},
    shopDomain:   {{ shop.permanent_domain | json }},
    apiToken:     {{ section.settings.api_token | json }},
    productId:    {{ product.id | json }},
    productHandle:{{ product.handle | json }},
    productTitle: {{ product.title | json }},
    productUrl:   {{ product.url | json }},
    perPage:      {{ section.settings.reviews_per_page | json }}
  };

  /* ===== DOM References ===== */
  var sectionEl     = document.getElementById('custom-reviews-' + CONFIG.sectionId);
  if (!sectionEl) return;

  var reviewsList   = document.getElementById('cr-reviews-list-' + CONFIG.sectionId);
  var paginationEl  = document.getElementById('cr-pagination-' + CONFIG.sectionId);
  var countEl       = document.getElementById('cr-review-count-' + CONFIG.sectionId);
  var writeBtn      = document.getElementById('cr-write-btn-' + CONFIG.sectionId);
  var overlay       = document.getElementById('cr-form-overlay-' + CONFIG.sectionId);
  var closeBtn      = document.getElementById('cr-form-close-' + CONFIG.sectionId);
  var form          = document.getElementById('cr-review-form-' + CONFIG.sectionId);
  var submitBtn     = document.getElementById('cr-form-submit-' + CONFIG.sectionId);
  var formMessage   = document.getElementById('cr-form-message-' + CONFIG.sectionId);
  var starPicker    = document.getElementById('cr-star-picker-' + CONFIG.sectionId);
  var starBtns      = starPicker ? starPicker.querySelectorAll('.cr-star-picker-btn') : [];
  var ratingInput   = document.getElementById('cr-rating-' + CONFIG.sectionId);

  /* ===== State ===== */
  var allReviews  = [];
  var currentPage = 1;
  var totalPages  = 1;
  var isSubmitting = false;
  var hasScrolled  = false;

  /* ===== Utility: safe text (XSS prevention) ===== */
  function esc(str) {
    var d = document.createElement('div');
    d.textContent = str || '';
    return d.innerHTML;
  }

  /* ===== Utility: relative time ===== */
  function timeAgo(dateStr) {
    if (!dateStr) return '';
    var now  = new Date();
    var date = new Date(dateStr);
    var secs = Math.floor((now - date) / 1000);
    if (secs < 60)    return 'Just now';
    var mins = Math.floor(secs / 60);
    if (mins < 60)    return mins + (mins === 1 ? ' minute' : ' minutes') + ' ago';
    var hrs = Math.floor(mins / 60);
    if (hrs < 24)     return hrs  + (hrs  === 1 ? ' hour'   : ' hours')   + ' ago';
    var days = Math.floor(hrs / 24);
    if (days < 30)    return days + (days === 1 ? ' day'    : ' days')    + ' ago';
    var months = Math.floor(days / 30);
    if (months < 12)  return months + (months === 1 ? ' month' : ' months') + ' ago';
    var years = Math.floor(months / 12);
    return years + (years === 1 ? ' year' : ' years') + ' ago';
  }

  /* ===========================================================
     FETCH REVIEWS — Multi-strategy approach:

     Strategy 1 (PRIMARY): Parse review_widget_data JSON metafield
       → Contains ALL reviews as structured JSON
       → Server-rendered by Liquid, zero network requests
       → No CORS, no API keys, no scraping

     Strategy 2 (FALLBACK): Parse jdgm.data.reviewWidget JS object
       → Same data, populated by Judge.me's <script> tag
       → Available if metafield JSON script tag missing

     Strategy 3 (FALLBACK): Scrape legacy widget HTML metafield
       → product.metafields.judgeme.widget (limited, ~1 review)

     Strategy 4 (LIVE FALLBACK): Poll Judge.me widget for live data
       → Judge.me's JS populates the hidden widget div
       → Scrape .jdgm-rev elements from the rendered widget

     Always: merge localStorage pending reviews on top
     =========================================================== */
  function fetchReviews() {
    console.log('[Reviews] Starting review fetch for product ' + CONFIG.productId);

    /* --- Strategy 1: review_widget_data JSON metafield --- */
    var jsonEl = document.getElementById('cr-jdgm-json-' + CONFIG.sectionId);
    if (jsonEl) {
      try {
        var jsonData = JSON.parse(jsonEl.textContent);
        var parsed = parseJudgeMeJson(jsonData);
        if (parsed.length > 0) {
          console.log('[Reviews] Strategy 1 (JSON metafield): ' + parsed.length + ' review(s)');
          allReviews = parsed;
          mergePendingReviews();
          updateHeroCounts();
          totalPages = Math.ceil(allReviews.length / CONFIG.perPage);
          showPage(1);
          if (countEl) countEl.textContent = allReviews.length + ' Review' + (allReviews.length !== 1 ? 's' : '');
          return; /* Success — no need for fallbacks */
        }
      } catch (e) {
        console.warn('[Reviews] Strategy 1 failed to parse JSON:', e.message);
      }
    }

    /* --- Strategy 2: jdgm.data.reviewWidget JS object --- */
    if (window.jdgm && jdgm.data && jdgm.data.reviewWidget && jdgm.data.reviewWidget[CONFIG.productId]) {
      try {
        var widgetData = jdgm.data.reviewWidget[CONFIG.productId];
        var parsed2 = parseJudgeMeJson(widgetData);
        if (parsed2.length > 0) {
          console.log('[Reviews] Strategy 2 (jdgm.data): ' + parsed2.length + ' review(s)');
          allReviews = parsed2;
          mergePendingReviews();
          updateHeroCounts();
          totalPages = Math.ceil(allReviews.length / CONFIG.perPage);
          showPage(1);
          if (countEl) countEl.textContent = allReviews.length + ' Review' + (allReviews.length !== 1 ? 's' : '');
          return; /* Success */
        }
      } catch (e) {
        console.warn('[Reviews] Strategy 2 failed:', e.message);
      }
    }

    /* --- Strategy 3: legacy widget HTML metafield --- */
    var dataDiv = document.getElementById('cr-jdgm-data-' + CONFIG.sectionId);
    if (dataDiv) {
      var cachedEls = dataDiv.querySelectorAll('.jdgm-rev');
      if (cachedEls.length > 0) {
        console.log('[Reviews] Strategy 3 (legacy HTML): ' + cachedEls.length + ' review(s)');
        parseReviewElements(cachedEls);
        /* Don't return — try Strategy 4 for more reviews */
      }
    }

    /* --- Strategy 4: live Judge.me widget scraping --- */
    fetchViaWidgetScraping();
  }

  /* ===========================================================
     PARSE JUDGE.ME review_widget_data JSON
     The JSON structure from Judge.me can vary. Known formats:

     Format A (reviews array at top level):
     { "reviews": [ { "reviewer": {...}, "rating": 5, ... } ] }

     Format B (nested under product):
     { "product": { "reviews": [...] } }

     Format C (HTML string containing reviews):
     { "html": "<div class='jdgm-rev'>...</div>" }

     Format D (reviews as 'data' key):
     { "data": { "reviews": [...] } }

     We try all formats and extract review objects.
     =========================================================== */
  function parseJudgeMeJson(data) {
    if (!data) return [];

    var reviews = [];

    /* Try to find the reviews array in various JSON structures */
    var rawReviews = null;

    if (Array.isArray(data.reviews)) {
      rawReviews = data.reviews;
    } else if (data.product && Array.isArray(data.product.reviews)) {
      rawReviews = data.product.reviews;
    } else if (data.data && Array.isArray(data.data.reviews)) {
      rawReviews = data.data.reviews;
    } else if (Array.isArray(data)) {
      rawReviews = data;
    }

    /* Format A/B/D: structured review objects */
    if (rawReviews && rawReviews.length > 0) {
      for (var i = 0; i < rawReviews.length; i++) {
        var r = rawReviews[i];
        if (!r) continue;

        /* Handle various field naming conventions */
        var name = 'Anonymous';
        if (r.reviewer && r.reviewer.name) {
          name = r.reviewer.name;
        } else if (r.reviewer_name) {
          name = r.reviewer_name;
        } else if (r.author) {
          name = r.author;
        } else if (r.name) {
          name = r.name;
        }

        var rating = parseInt(r.rating) || parseInt(r.score) || 5;
        var body = r.body || r.content || r.review || r.text || '';
        var title = r.title || r.heading || '';
        var createdAt = r.created_at || r.date || r.timestamp || r.created || '';
        var verified = '';
        if (r.verified === 'buyer' || r.verified === true || r.verified_buyer || r.source === 'buyer') {
          verified = 'buyer';
        }

        reviews.push({
          reviewer: { name: name },
          rating: Math.min(Math.max(rating, 1), 5),
          body: body,
          title: title,
          created_at: createdAt,
          verified: verified
        });
      }
      console.log('[Reviews] Parsed ' + reviews.length + ' review(s) from JSON');
      return reviews;
    }

    /* Format C: HTML string — parse DOM */
    var htmlStr = data.html || data.widget_html || data.content_html || '';
    if (typeof data === 'string' && data.indexOf('jdgm-rev') !== -1) {
      htmlStr = data;
    }
    if (htmlStr && htmlStr.indexOf('jdgm-rev') !== -1) {
      var doc = new DOMParser().parseFromString(htmlStr, 'text/html');
      var revEls = doc.querySelectorAll('.jdgm-rev');
      if (revEls.length > 0) {
        console.log('[Reviews] Parsed ' + revEls.length + ' review(s) from JSON HTML');
        for (var j = 0; j < revEls.length; j++) {
          reviews.push(parseOneRevElement(revEls[j]));
        }
        return reviews;
      }
    }

    /* If data has keys we don't recognize, log them for debugging */
    if (typeof data === 'object') {
      var keys = Object.keys(data);
      console.log('[Reviews] JSON keys found: ' + keys.join(', '));

      /* Last resort: look for any array property that might contain reviews */
      for (var k = 0; k < keys.length; k++) {
        var val = data[keys[k]];
        if (Array.isArray(val) && val.length > 0 && val[0] && (val[0].rating || val[0].body || val[0].reviewer)) {
          console.log('[Reviews] Found reviews in key: ' + keys[k]);
          return parseJudgeMeJson({ reviews: val });
        }
      }
    }

    return reviews;
  }

  /* ===== Parse a single .jdgm-rev DOM element ===== */
  function parseOneRevElement(el) {
    var authorEl   = el.querySelector('.jdgm-rev__author');
    var bodyEl     = el.querySelector('.jdgm-rev__body');
    var ratingEl   = el.querySelector('.jdgm-rev__rating, [data-score]');
    var titleEl    = el.querySelector('.jdgm-rev__title');
    var dateEl     = el.querySelector('.jdgm-rev__timestamp');
    var verifiedEl = el.querySelector('.jdgm-rev__buyer-badge, .jdgm-verified');

    return {
      reviewer:   { name: authorEl ? authorEl.textContent.trim() : 'Anonymous' },
      rating:     ratingEl ? (parseInt(ratingEl.getAttribute('data-score')) || 5) : 5,
      body:       bodyEl   ? bodyEl.textContent.trim()   : '',
      title:      titleEl  ? titleEl.textContent.trim()  : '',
      created_at: dateEl   ? (dateEl.getAttribute('data-content') || dateEl.getAttribute('datetime') || dateEl.textContent.trim()) : '',
      verified:   verifiedEl ? 'buyer' : ''
    };
  }

  /* ===========================================================
     STRATEGY 4: JUDGE.ME WIDGET SCRAPING (LIVE FALLBACK)
     Load Judge.me's widget script and wait for it to populate
     the hidden widget div with .jdgm-rev elements.
     =========================================================== */
  function fetchViaWidgetScraping() {
    var liveDiv = document.getElementById('cr-jdgm-live-' + CONFIG.sectionId);
    if (!liveDiv) {
      console.log('[Reviews] No live widget div — using existing data only');
      finalizeFallback();
      return;
    }

    console.log('[Reviews] Strategy 4: Loading Judge.me widget for live scraping...');

    /* Ensure Judge.me knows the shop domain */
    window.JEYME_SHOP_DOMAIN = CONFIG.shopDomain;

    /* If Judge.me script is already loaded, just init and poll */
    if (window.jdgm && typeof jdgm.init === 'function') {
      console.log('[Reviews] Judge.me already loaded, calling init()');
      try { jdgm.init(); } catch(e) {}
      pollForWidgetReviews(liveDiv);
      return;
    }

    /* Load Judge.me scripts */
    loadScript('https://cdn.judge.me/widget_preloader.js', function() {
      console.log('[Reviews] widget_preloader.js loaded');
      setTimeout(function() {
        if (window.jdgm && typeof jdgm.init === 'function') {
          try { jdgm.init(); } catch(e) {}
        }
        loadScript('https://cdn.judge.me/assets/installed.js', function() {
          console.log('[Reviews] installed.js loaded');
          setTimeout(function() {
            if (window.jdgm && typeof jdgm.init === 'function') {
              try { jdgm.init(); } catch(e) {}
            }
          }, 500);
        });
      }, 800);
      pollForWidgetReviews(liveDiv);
    }, function() {
      loadScript('https://cdn.judge.me/assets/installed.js', function() {
        console.log('[Reviews] installed.js loaded (fallback)');
        setTimeout(function() {
          if (window.jdgm && typeof jdgm.init === 'function') {
            try { jdgm.init(); } catch(e) {}
          }
        }, 500);
        pollForWidgetReviews(liveDiv);
      }, function() {
        console.log('[Reviews] All Judge.me scripts failed');
        finalizeFallback();
      });
    });
  }

  /* ===== Load an external script ===== */
  function loadScript(src, onSuccess, onError) {
    var s = document.createElement('script');
    s.src = src;
    s.async = true;
    s.onload  = onSuccess;
    s.onerror = onError || function() {};
    document.head.appendChild(s);
  }

  /* ===========================================================
     POLL for live widget reviews.
     After Judge.me renders, check for the JS data object first
     (jdgm.data.reviewWidget), then fall back to DOM scraping.
     =========================================================== */
  function pollForWidgetReviews(liveDiv) {
    var maxAttempts = 30;
    var attempt = 0;

    function poll() {
      /* Check if jdgm.data was populated by the widget script */
      if (window.jdgm && jdgm.data && jdgm.data.reviewWidget && jdgm.data.reviewWidget[CONFIG.productId]) {
        try {
          var parsed = parseJudgeMeJson(jdgm.data.reviewWidget[CONFIG.productId]);
          if (parsed.length > 0) {
            console.log('[Reviews] Widget populated jdgm.data with ' + parsed.length + ' review(s)');
            allReviews = parsed;
            mergePendingReviews();
            updateHeroCounts();
            totalPages = Math.ceil(allReviews.length / CONFIG.perPage);
            hasScrolled = false;
            showPage(1);
            if (countEl) countEl.textContent = allReviews.length + ' Review' + (allReviews.length !== 1 ? 's' : '');
            return;
          }
        } catch(e) {}
      }

      /* Check for DOM-rendered .jdgm-rev elements */
      var revEls = liveDiv.querySelectorAll('.jdgm-rev');
      if (revEls.length === 0) {
        /* Also check globally */
        var dataDiv = document.getElementById('cr-jdgm-data-' + CONFIG.sectionId);
        var allOnPage = document.querySelectorAll('.jdgm-rev');
        var external = [];
        for (var i = 0; i < allOnPage.length; i++) {
          if (!dataDiv || !dataDiv.contains(allOnPage[i])) {
            external.push(allOnPage[i]);
          }
        }
        if (external.length > 0) revEls = external;
      }

      if (revEls.length > 0) {
        var collected = [];
        for (var j = 0; j < revEls.length; j++) {
          collected.push(parseOneRevElement(revEls[j]));
        }
        if (collected.length > allReviews.filter(function(r) { return !r.pending; }).length) {
          console.log('[Reviews] Widget DOM has ' + collected.length + ' review(s)');
          allReviews = collected;
          mergePendingReviews();
          updateHeroCounts();
          totalPages = Math.ceil(allReviews.length / CONFIG.perPage);
          hasScrolled = false;
          showPage(1);
          if (countEl) countEl.textContent = allReviews.length + ' Review' + (allReviews.length !== 1 ? 's' : '');
        }
        return;
      }

      if (++attempt < maxAttempts) {
        setTimeout(poll, 1000);
      } else {
        console.log('[Reviews] Widget poll timed out after ' + maxAttempts + 's');
        finalizeFallback();
      }
    }

    poll();
  }

  /* ===== Final fallback: use whatever we have ===== */
  function finalizeFallback() {
    mergePendingReviews();
    updateHeroCounts();
    totalPages = Math.ceil(allReviews.length / CONFIG.perPage);
    if (allReviews.length > 0) { showPage(1); }
    else { renderEmpty(); }
    if (countEl) countEl.textContent = allReviews.length + ' Review' + (allReviews.length !== 1 ? 's' : '');
  }

  /* ===== Parse .jdgm-rev elements into our review array (legacy) ===== */
  function parseReviewElements(revEls) {
    allReviews = [];
    for (var i = 0; i < revEls.length; i++) {
      allReviews.push(parseOneRevElement(revEls[i]));
    }
    mergePendingReviews();
    updateHeroCounts();
    totalPages = Math.ceil(allReviews.length / CONFIG.perPage);
    showPage(1);
  }

  /* ===== Update hero section counts ===== */
  function updateHeroCounts() {
    var countText = allReviews.length + ' Review' + (allReviews.length !== 1 ? 's' : '');

    if (countEl) countEl.textContent = countText;

    var heroCount = document.querySelector('.pp-review-count');
    if (heroCount) heroCount.textContent = countText;

    if (allReviews.length > 0) {
      var sum = allReviews.reduce(function(a, r) { return a + (r.rating || 0); }, 0);
      var avg = Math.round(sum / allReviews.length);
      var heroStars = document.querySelector('.pp-stars');
      if (heroStars) {
        var s = '';
        for (var i = 0; i < avg; i++) s += '\u2605';
        for (var j = avg; j < 5; j++) s += '\u2606';
        heroStars.textContent = s;
      }
    }
  }

  /* ===========================================================
     RENDER SINGLE REVIEW CARD
