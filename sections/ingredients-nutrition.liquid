<script>
  document.addEventListener("DOMContentLoaded", function() {
    var sectionContainer = document.querySelector('.ing-section');
    if (!sectionContainer) return;

    // Cache target elements
    var secondItem = sectionContainer.querySelector('.ing-item[data-is-second="true"]');
    var lastItem = sectionContainer.querySelector('.ing-item[data-is-last="true"]');

    // Variant data for dynamic updates
    var variants = [
      {% for variant in product.variants %}
        {
          id: "{{ variant.id }}",
          color: "{{ variant.metafields.custom.nutrition_color.value | default: product.metafields.custom.nutrition_color.value | default: section.settings.border_color }}",
          ing2_img: "{% if variant.metafields.custom.ingredient_2_image.value %}{{ variant.metafields.custom.ingredient_2_image.value | image_url: width: 200 }}{% endif %}",
          ing2_text: `{{ variant.metafields.custom.ingredient_2_text.value | newline_to_br }}`,
          ingLast_img: "{% if variant.metafields.custom.ingredient_last_image.value %}{{ variant.metafields.custom.ingredient_last_image.value | image_url: width: 200 }}{% endif %}",
          ingLast_text: `{{ variant.metafields.custom.ingredient_last_text.value | newline_to_br }}`
        },
      {% endfor %}
    ];

    /**
     * Updates an ingredient item's image and label.
     * Falls back to data-default-img / data-default-text when variant has no override.
     */
    function updateIngredientItem(item, variantImg, variantText) {
        if (!item) return;

        // Use variant value if available, otherwise fall back to block default
        var finalImg  = variantImg  || item.getAttribute('data-default-img')  || '';
        var finalText = variantText || item.getAttribute('data-default-text') || '';

        // --- Update image ---
        var circle = item.querySelector('.ing-circle');
        if (circle) {
            var img = circle.querySelector('img');
            if (finalImg) {
                if (img) {
                    img.src = finalImg;
                    // CRITICAL: remove srcset/sizes so the browser uses the new src
                    img.removeAttribute('srcset');
                    img.removeAttribute('sizes');
                } else {
                    img = document.createElement('img');
                    img.src = finalImg;
                    img.loading = 'lazy';
                    circle.appendChild(img);
                }
            } else if (img) {
                img.remove();
            }
        }

        // --- Update label ---
        var label = item.querySelector('.ing-label');
        if (label && finalText) {
            label.innerHTML = finalText;
        }
    }

    // Listen for custom event dispatched by main-product.liquid
    document.addEventListener('pp:variant:change', function(e) {
        if (!e.detail || !e.detail.variantId) return;

        var variantId = String(e.detail.variantId);
        var match = variants.find(function(v) { return String(v.id) === variantId; });
        if (!match) return;

        // Update nutrition card color
        sectionContainer.style.setProperty('--nut-color', match.color);

        // Update 2nd and Last ingredient items (auto-falls back to defaults)
        updateIngredientItem(secondItem, match.ing2_img, match.ing2_text);
        updateIngredientItem(lastItem,   match.ingLast_img, match.ingLast_text);
    });
  });
</script>
