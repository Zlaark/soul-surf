<script>
  document.addEventListener("DOMContentLoaded", function() {
    var sectionContainer = document.querySelector('.ing-section');
    if (!sectionContainer) return;

    // --- Data Preparation ---
    var variants = [
      {% for variant in product.variants %}
        {
          id: "{{ variant.id }}",
          color: "{{ variant.metafields.custom.nutrition_color.value | default: product.metafields.custom.nutrition_color.value | default: section.settings.border_color }}",
          ingredients: [
            {% assign metaobject_list = variant.metafields.custom.ingredients_list.value | default: product.metafields.custom.ingredients_list.value %}

            {% comment %} Capture items for JS loop via loop to avoid index issues {% endcomment %}
            {% for item in metaobject_list limit: 9 %}
              {% case forloop.index %}
                {% when 1 %}{% assign js_meta_1 = item %}
                {% when 2 %}{% assign js_meta_2 = item %}
                {% when 3 %}{% assign js_meta_3 = item %}
                {% when 4 %}{% assign js_meta_4 = item %}
                {% when 5 %}{% assign js_meta_5 = item %}
                {% when 6 %}{% assign js_meta_6 = item %}
                {% when 7 %}{% assign js_meta_7 = item %}
                {% when 8 %}{% assign js_meta_8 = item %}
                {% when 9 %}{% assign js_meta_9 = item %}
              {% endcase %}
            {% endfor %}

            {% for i in (1..9) %}
            {% assign default_title = "" %}
            {% assign default_popup_desc = "Detailed information about this ingredient." %}
            {% assign current_js_meta = nil %}

            {% case i %}
              {% when 1 %}{% assign default_title = "Carbonated Water" %}{% assign current_js_meta = js_meta_1 %}
              {% when 2 %}{% assign default_title = "Real Fruit Juice" %}{% assign current_js_meta = js_meta_2 %}
              {% when 3 %}{% assign default_title = "Natural Flavors" %}{% assign current_js_meta = js_meta_3 %}
              {% when 4 %}{% assign default_title = "Prebiotic Fiber" %}{% assign current_js_meta = js_meta_4 %}
              {% when 5 %}{% assign default_title = "Stevia Leaf" %}{% assign current_js_meta = js_meta_5 %}
              {% when 6 %}{% assign default_title = "Vitamin C" %}{% assign current_js_meta = js_meta_6 %}
              {% when 7 %}{% assign default_title = "B-Vitamins" %}{% assign current_js_meta = js_meta_7 %}
              {% when 8 %}{% assign default_title = "Electrolytes" %}{% assign current_js_meta = js_meta_8 %}
              {% when 9 %}{% assign default_title = "No Added Sugar" %}{% assign current_js_meta = js_meta_9 %}
            {% endcase %}

            {% assign img_k = 'ingredient_' | append: i | append: '_image' %}
            {% assign title_k = 'ingredient_' | append: i | append: '_title' %}
            {% assign pd_k = 'ingredient_' | append: i | append: '_popup_description' %}
            
            {% if current_js_meta %}
              {% assign js_image = current_js_meta.image | image_url: width: 200 %}
              {% assign js_title = current_js_meta.name | newline_to_br %}
              {% assign js_popup_title = current_js_meta.name | escape %}
              {% assign js_popup_desc = current_js_meta.description | default: default_popup_desc | escape %}
            {% else %}
               {% capture js_image %}{% if variant.metafields.custom[img_k] %}{{ variant.metafields.custom[img_k] | image_url: width: 200 }}{% elsif product.metafields.custom[img_k] %}{{ product.metafields.custom[img_k] | image_url: width: 200 }}{% endif %}{% endcapture %}
               {% assign js_title = variant.metafields.custom[title_k] | default: product.metafields.custom[title_k] | default: default_title | newline_to_br %}
               {% assign js_popup_title = variant.metafields.custom[title_k] | default: product.metafields.custom[title_k] | default: default_title | escape %}
               {% assign js_popup_desc = variant.metafields.custom[pd_k] | default: product.metafields.custom[pd_k] | default: default_popup_desc | escape %}
            {% endif %}

              {
                index: {{ i }},
                image: "{{ js_image | strip }}",
                title: `{{ js_title }}`,
                popup_title: `{{ js_popup_title }}`,
                popup_desc: `{{ js_popup_desc }}`
              }{% unless forloop.last %},{% endunless %}
            {% endfor %}
          ]
        },
      {% endfor %}
    ];
    console.log('Ing Section Variants Data:', variants);

    // --- Update Logic ---
    function updateSection(variantId) {
        var match = variants.find(function(v) { return String(v.id) === String(variantId); });
        if (!match) return;

        // 1. Update Nutrition Color
        sectionContainer.style.setProperty('--nut-color', match.color);

        // 2. Update Ingredients
        var ingItems = sectionContainer.querySelectorAll('.ing-item');
        ingItems.forEach(function(item) {
            var idx = parseInt(item.getAttribute('data-index'));
            var data = match.ingredients.find(function(d) { return d.index === idx; });
            
            if (data) {
                console.log('UpdateSection: applying data to item ' + idx, data);
                // Check if has content
                var hasContent = (data.image || data.title);
                item.style.display = hasContent ? 'flex' : 'none';

                if (!hasContent) return;

                // Update Image
                var innerCircle = item.querySelector('.ing-circle');
                var img = innerCircle.querySelector('img');
                
                if (data.image) {
                    if (img) {
                        img.src = data.image; 
                        img.removeAttribute('srcset'); 
                        img.style.display = '';
                    } else {
                        var newImg = document.createElement('img');
                        newImg.src = data.image;
                        newImg.className = 'ing-img-display';
                        innerCircle.appendChild(newImg);
                    }
                } else {
                     if (img) img.style.display = 'none';
                }
                
                // Update Text
                var label = item.querySelector('.ing-label');
                if (label) label.innerHTML = data.title;

                // Update Popup Data Attributes
                item.setAttribute('data-popup-title', data.popup_title);
                item.setAttribute('data-popup-desc', data.popup_desc);
            }
        });
    }

    // --- Popup Logic ---
    var popupOverlay = document.getElementById('ingPopup');
    
    // Move popup to body to avoid stacking context issues
    if (popupOverlay && popupOverlay.parentNode !== document.body) {
        document.body.appendChild(popupOverlay);
    }

    var popupClose = popupOverlay ? popupOverlay.querySelector('.ing-popup-close') : null;
    var popupImage = popupOverlay ? popupOverlay.querySelector('.js-popup-image') : null;
    var popupTitle = popupOverlay ? popupOverlay.querySelector('.js-popup-title') : null;
    var popupDesc = popupOverlay ? popupOverlay.querySelector('.js-popup-desc') : null;

    console.log('Popup Elements:', { popupOverlay, popupClose, popupImage, popupTitle, popupDesc });

    function openPopup(item) {
        if (!popupOverlay) {
            console.error('Popup overlay not found!');
            return;
        }

        var imgUrl = item.querySelector('.ing-circle img')?.src;
        var title = item.getAttribute('data-popup-title');
        var desc = item.getAttribute('data-popup-desc');

        console.log('Opening Popup - Raw Data:', { title: title, desc: desc, img: imgUrl });

        if (popupImage) {
             popupImage.src = imgUrl || '';
             popupImage.style.display = imgUrl ? 'block' : 'none';
        }
        if (popupTitle) popupTitle.innerHTML = title || ''; // Use innerHTML to decoding entities if any
        if (popupDesc) popupDesc.innerHTML = desc || '';

        // Show logic
        popupOverlay.style.display = 'flex';
        // Force reflow
        void popupOverlay.offsetWidth;
        popupOverlay.style.opacity = '1'; 
        popupOverlay.classList.add('active');
        document.body.style.overflow = 'hidden'; 
    }

    function closePopup() {
        console.log('Closing popup');
        if (!popupOverlay) return;
        
        popupOverlay.style.opacity = '0';
        popupOverlay.classList.remove('active');
        setTimeout(() => {
            popupOverlay.style.display = 'none';
        }, 300);
        document.body.style.overflow = '';
    }

    // Event Delegation
    sectionContainer.addEventListener('click', function(e) {
        console.log('Click on section:', e.target);
        var item = e.target.closest('.ing-item');
        if (item) {
            openPopup(item);
        }
    });

    if (popupClose) popupClose.addEventListener('click', closePopup);
    
    if (popupOverlay) {
        popupOverlay.addEventListener('click', function(e) {
            if (e.target === popupOverlay) closePopup();
        });
    }
    
    // Close on Escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && popupOverlay && popupOverlay.classList.contains('active')) {
            closePopup();
        }
    });

    // --- Variant Change Listener ---
    document.addEventListener('pp:variant:change', function(e) {
        console.log('Variant changed:', e.detail);
        if (e.detail && e.detail.variantId) {
            updateSection(e.detail.variantId);
        }
    });
  });
