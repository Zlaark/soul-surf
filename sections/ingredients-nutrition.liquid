<div class="ing-section">
  <div class="ing-container">
    
    <!-- Left: Ingredients -->
    <div class="ing-left">
      <h2 class="ing-heading">{{ section.settings.heading }}</h2>
      
      <div class="ing-grid">
        {% assign current_variant = product.selected_or_first_available_variant %}
        {% assign variant_meta = current_variant.metafields.custom %}
        
        {% assign variant_list = variant_meta.ingredients_list.value %}
        {% assign product_list = product.metafields.custom.ingredients_list.value %}

        {% assign metaobject_list = variant_list %}
        {% if metaobject_list == blank %}
          <!-- FALLBACK TO PRODUCT LIST -->
          {% assign metaobject_list = product_list %}
        {% endif %}

        <div style="display:none;">
            DEBUG:
            Variant ID: {{ current_variant.id }}
            Variant List Valid: {% if variant_list != blank %}YES ({{ variant_list | size }}){% else %}NO{% endif %}
            Product List Valid: {% if product_list != blank %}YES ({{ product_list | size }}){% else %}NO{% endif %}
            Final List Size: {{ metaobject_list | size }}
