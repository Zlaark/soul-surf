{% schema %}
{
  "name": "Image with text (Custom)",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Not Just Another Soda."
    },
    {
      "type": "textarea",
      "id": "text_content",
      "label": "Text Content",
      "default": "SoulSurf is what happens when soda grows up.\nDesigned for people who care about taste, vibe, and what they're choosing — without turning it into a lecture."
    },
    {
       "type": "textarea",
       "id": "text_content_2",
       "label": "Text Content 2",
       "default": "This is soda for late nights, long workdays, weekend plans,\nplaylists, and conversations."
    },
    {
      "type": "text",
      "id": "bold_text",
      "label": "Bold Text",
      "default": "The kind you’re happy to hold in your hand."
    },
    {
      "type": "color_background",
      "id": "section_bg",
      "label": "Section Background",
      "default": "#FCDBA3"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "bold_text_color",
      "label": "Bold Text Color",
      "default": "#000000"
    },
    {
       "type": "color",
       "id": "button_bg",
       "label": "Button Background",
       "default": "#000000"
    },
    {
       "type": "color",
       "id": "button_text_color",
       "label": "Button Text Color",
       "default": "#FFFFFF"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "UPGRADE TO SOULSURF"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Image with text (Custom)"
    }
  ]
}
{% endschema %}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap');

  .custom-image-text-section {
    background: {{ section.settings.section_bg }};
    width: 100%;
    position: relative;
    padding: 80px 0 160px 0; /* Increased bottom padding */
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .container {
    width: 100%;
    max-width: 1400px; /* Limit max width for large screens */
    margin: 0 auto;
    padding: 0 40px; /* Horizontal padding for safety */
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 60px; /* Space between image and text */
    flex-wrap: wrap; /* Allow wrapping on smaller desktop/tablets if needed */
  }

  .image-container {
    flex: 1;
    min-width: 300px; /* Prevent it from getting too small */
    position: relative;
    display: flex;
    justify-content: center; /* Center image in its half */
  }

  .image-container img {
    width: 100%;
    height: auto;
    max-width: 542px; /* Original design max width */
    object-fit: cover;
    border-radius: 23px;
    display: block;
    aspect-ratio: 542 / 652; /* Maintain aspect ratio */
  }

  .text-container {
    flex: 1;
    min-width: 300px;
    color: {{ section.settings.text_color }};
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .section-heading {
    font-family: 'Playfair Display', serif;
    font-size: clamp(40px, 5vw, 65.9px); /* Responsive font size */
    font-weight: 600; 
    line-height: 1.1; 
    margin-top: 5px;
    margin-bottom: 24px;
    color: {{ section.settings.heading_color }};
  }

  .section-text {
    font-family: 'Plus Jakarta Sans', sans-serif;
    font-size: 18px; /* Slightly adjusted base */
    font-weight: 500; 
    line-height: 1.6;
    max-width: 700px;
    margin-bottom: 30px;
    color: {{ section.settings.text_color }};
  }

  .section-bold-text {
    font-family: 'Playfair Display', serif;
    font-size: clamp(24px, 3vw, 32px);
    font-weight: 600; 
    margin-bottom: 40px;
    color: {{ section.settings.bold_text_color }};
  }

  .custom-button {
    font-family: 'Plus Jakarta Sans', sans-serif;
    background-color: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text_color }};
    border: none;
    padding: 15px 35px;
    border-radius: 50px;
    font-size: 19px;
    font-weight: 700; 
    text-transform: uppercase;
    letter-spacing: 1px;
    text-decoration: none;
    display: inline-block;
    cursor: pointer;
    transition: transform 0.2s ease, box-shadow 0.3s ease;
    align-self: flex-start; /* Do not stretch button */

    /* Animation Properties */
    position: relative;
    overflow: hidden;
    z-index: 10;
    border: 1px solid rgba(208, 151, 0, 0); /* Transparent border of target color */
    outline: none;
  }
  
  .custom-button span {
    position: relative;
    z-index: 2;
  }

  .custom-button::after {
    content: '';
    position: absolute;
    bottom: -50%;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #D09700; 
    transform-origin: bottom center;
    transition: transform 1000ms cubic-bezier(0.48, 0, 0.12, 1);
    transform: skewY(9.3deg) scaleY(0);
    z-index: 1;
  }

  .custom-button:hover {
    transform: scale(1.05);
    border-color: #D09700;
  }

  .custom-button:hover::after {
      transform-origin: bottom center;
      transform: skewY(9.3deg) scaleY(2);
  }

  /* Animations */
  .reveal-image-wrapper {
    overflow: hidden;
    opacity: 0;
    transform: scale(1.1); 
    transition: 
      opacity 0.6s cubic-bezier(0.16, 1, 0.3, 1), 
      transform 1.0s cubic-bezier(0.16, 1, 0.3, 1);
    will-change: opacity, transform;
  }

  .reveal-text {
    opacity: 0;
    transform: translateY(30px);
    transition: 
      opacity 0.6s cubic-bezier(0.16, 1, 0.3, 1), 
      transform 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    will-change: opacity, transform;
  }

  .reveal-image-wrapper.is-visible {
    opacity: 1;
    transform: scale(1);
  }

  .reveal-text.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .delay-100 { transition-delay: 0.05s; }
  .delay-200 { transition-delay: 0.1s; }
  .delay-300 { transition-delay: 0.15s; }
  .delay-400 { transition-delay: 0.2s; }
  .delay-500 { transition-delay: 0.25s; }

  /* Mobile Responsiveness */
  @media screen and (max-width: 900px) {
    .container {
      flex-direction: column-reverse; /* Text atop image or Image atop text? Usually Image first on mobile, but let's stick to standard flow */
      flex-direction: column; 
      gap: 40px;
      padding: 0 20px;
    }

    .image-container {
      width: 100%;
      display: flex;
      justify-content: center;
    }

    .text-container {
      width: 100%;
      align-items: flex-start; 
      text-align: left;
    }
    
    .section-text {
        margin-left: 0;
        margin-right: 0;
    }

    .custom-button {
        align-self: flex-start; /* Left align on mobile */
        font-size: 15px; /* Reduced for mobile */
        padding: 12px 24px; /* Reduced for mobile */
    }
    
    .custom-image-text-section {
        padding: 60px 0;
    }
  }
</style>

<div class="custom-image-text-section">
  <div class="container">
    <div class="image-container reveal-image-wrapper">
      {%- if section.settings.image != blank -%}
        {{ section.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', alt: section.settings.image.alt }}
      {%- else -%}
        <img src="{{ 'Rectangle 244.png' | asset_url }}" alt="Soul Surf Soda" loading="lazy" width="500" height="600">
      {%- endif -%}
    </div>
    <div class="text-container">
      <h2 class="section-heading reveal-text delay-100">{{ section.settings.heading }}</h2>
      <p class="section-text reveal-text delay-200">{{ section.settings.text_content | newline_to_br }}</p>
      <p class="section-text reveal-text delay-300">{{ section.settings.text_content_2 | newline_to_br }}</p>
      <div class="section-bold-text reveal-text delay-400">{{ section.settings.bold_text }}</div>
      <a href="{{ section.settings.button_link | default: '#' }}" class="custom-button reveal-text delay-500"><span>{{ section.settings.button_label }}</span></a>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.5 /* Trigger at 50% visible */
    };

    const observer = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    const imageWrapper = document.querySelector('.custom-image-text-section .reveal-image-wrapper');
    if (imageWrapper) observer.observe(imageWrapper);

    const textElements = document.querySelectorAll('.custom-image-text-section .reveal-text');
    textElements.forEach(el => observer.observe(el));
  });
</script>
